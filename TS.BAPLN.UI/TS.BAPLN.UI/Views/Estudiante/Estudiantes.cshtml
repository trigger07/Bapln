@model List<TS.BAPLN.DataEntities.DTO.EstudianteDTO>

@{
    ViewBag.Title = "Estudiantes";
}

<div class="row">
    <div class="col-md-12">

        <h1 class="page-header col-md-10">Estudiantes</h1>
        <h1 class="page-header col-md-2">
            <p>
                <span class="glyphicon glyphicon-plus">
                </span>
                @Html.ActionLink("Agregar Estudiante", "Crear")
            </p>
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">Listado</h4>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered nowrap" width="100%" id="data-table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Carné</th>
                            <th>Cédula</th>
                            <th>Nacionalidad</th>
                            <th>Nacimiento</th>
                            <th>Tel. Móvil</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                            <tr class="even gradeC">
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.PrimerApellido) @Html.DisplayFor(modelItem => item.SegundoApellido)
                                </td>
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.Carne)
                                </td>
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.Cedula)
                                </td>
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.Nacionalidad)
                                </td>
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.Fecha_Nacimiento)
                                </td>
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.TelefonoMovil)
                                </td>
                                <td>
                                    <span class="glyphicon glyphicon-pencil">&nbsp;</span>
                                    @Html.ActionLink("Editar", "Editar", new { id = item.Id })
                                    <br />
                                </td>
                                <td>
                                    @if (item.Activo)
                                    {
                                        <span class="glyphicon glyphicon-trash">&nbsp;</span>@Html.ActionLink("Inactivar", "Inactivar", new { id = item.Id })
                                    }
                                    else
                                    {
                                        <span class="glyphicon glyphicon-trash">&nbsp;</span>@Html.ActionLink("Activar", "Activar", new { id = item.Id })
                                    }
                                </td>
                            </tr>
                    }
                    </tbody>
                    @*<tfoot>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>*@
                </table>
            </div>
       </div>
    </div>
</div>

<!-- #modal-dialog -->
<div class="modal fade" id="modal-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Detalle del Estudiante</h4>
            </div>
            <div class="modal-body">
                <div id="modalContent"></div>
            </div>
        </div>
    </div>
</div>

<script>
    function Detail(id){
        //alert(id);
        //$('#modal-dialog').modal('show');

        $.ajax({
            type: 'GET',
            url: '/Estudiante/Detalle',
            dataType: 'html',
            data: {'id':id},
            success: function (data) {
                $('#modalContent').html(data);
                $('#modal-dialog').modal('show');
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert("error: " + jqXHR.responseText);
            }
        });

    }
</script>
