@model List<TS.BAPLN.DataEntities.DTO.InstitucionDTO>

@{
    ViewBag.Title = "Instituciones";
}

<div class="row">
    <div class="col-md-12">

        <h1 class="page-header col-md-10">Instituciones</h1>
        <h1 class="page-header col-md-2">
            <p>
                <span class="glyphicon glyphicon-plus">
                </span>
                @Html.ActionLink("Agregar Institucion", "Crear")
            </p>
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">Listado</h4>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered nowrap" width="100%" id="data-table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Teléfono</th>
                            <th>Dirección</th>
                            <th>Email</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                            <tr class="even gradeC">
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.Direccion)
                                </td>
                                <td onclick="Detail(@item.Id)" style="cursor: pointer;">
                                    @Html.DisplayFor(modelItem => item.EmailContacto)
                                </td>                                
                                <td>
                                    <span class="glyphicon glyphicon-pencil">&nbsp;</span>
                                    @Html.ActionLink("Editar", "Editar", new { id = item.Id })
                                    <br />
                                </td>
                            </tr>
                    }
                    </tbody>
                    @*<tfoot>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>*@
                </table>
            </div>
       </div>
    </div>
</div>
